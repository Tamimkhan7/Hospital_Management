<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HospitalManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="Hospitals" asp-action="Index">Hospital</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="Rooms" asp-action="Index">Room</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="User" asp-action="Index">User</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="User" asp-action="AllDoctors">Doctor List</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="User" asp-action="AllPatient">Patient List</a></li>
                        @* <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="User" asp-action="DoctorFind">Search Doctor</a></li> *@
                        <li class="nav-item"><a class="nav-link" asp-area="admin" asp-controller="Contacts" asp-action="Index">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/DoctorRegister">Register Doctor</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register Patient</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="doctor" asp-controller="Doctors" asp-action="Index">DoctorTiming</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HospitalManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
